<p id="notice" class="text-success container"><%= notice %></p>


<div class="container">
  <h1>Produits</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Description</th>
        <th>Catégorie</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td class="align-middle"><%= item.title %></td>
          <td class="align-middle"><%= item.description[0..20] %>...</td>
          <td class="align-middle"><%= item.category.name %></td>
          <td><%= link_to 'Detail', item, class: "btn btn-primary" %></td>
          <td><%= link_to 'Modifier', edit_item_path(item), class: "btn btn-warning" %></td>
          <td><%= link_to 'Supprimer', item, method: :delete, data: { confirm: 'Etes-vous sûr?' }, class: "btn btn-danger" %></td>
       
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  

  <div class="row mb-3">
    <%= link_to 'Nouvel item', new_item_path, class: "btn btn-success align-middle mr-3" %>
    <%= link_to "Deconnexion" destroy_user_session_path, :class => "btn btn-style-6 btn-danger align-middle", :data => { :method => "delete"} %>
  </div>

</div>