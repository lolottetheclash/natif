<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-style-1">
        <div class="form-group text-center">
          <h2 class="bold">Reset Password</h2>
          <em>enter your email and to receive instructions</em>
        </div>
		<div class="form-group input-icon">
			<%= f.email_field :email, autocomplete: "email", class: "form-control",placeholder: "Email address",  autofocus: true  %>
		</div>
		<div class="actions">
			 <%= f.submit "Reset ", class: "btn btn-danger btn-block reset-done" %>
		</div>
	</div>
<% end %>


 