<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= render "devise/shared/error_messages", resource: resource %></div>
  <div class="form-style-1">
    <div class="form-group text-center mb-2 ">
      <h2 class="bold mb-0">Authentification</h2>
      <em>a votre compte</em>
    </div>
    <div class="form-group input-icon">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Email ou Pseudonyme"%>
    </div>
    <div class="form-group input-icon">
      <%= f.password_field :password, autocomplete: "password", class: "form-control", placeholder: "Mot de passe"%>
    </div>
    <div class="form-group d-flex justify-content-between">
     <%= link_to "Mot de passe oubliÃ©", new_password_path(:user), class: "navi-link" %>
    </div>
    <%= f.submit "S'authentifier", class: "btn btn-primary btn-block"%>
  </div>
<% end %>