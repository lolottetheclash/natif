<div class="col-md-4 col-lg-3">
  <div class="card">
    <div class="card-body text-center">
      <%if @user.avatar.attached?%>
        <%= image_tag @user.avatar, alt: @user.fullname, :class => "rounded-circle mb-3", :style => "width:100px;height:100px;" %>
      <%elsif @user.gender == "Male" %>
        <%= image_tag ("mister.jpg"), alt: @user.fullname, :class => "rounded-circle mb-3", :style => "width:100px;height:100px;" %>
      <% else %>
        <%= image_tag ("miss.jpg"), alt: @user.fullname, :class => "rounded-circle mb-3", :style => "width:100px;height:100px;" %>
      <%end%>
      <h5 class="bold mb-0"><%= @user.fullname %></h5>
      <h6 class="bold mb-0">~ <%= @user.username.capitalize %> ~</h6></br>
      <small class="counter">Member since: <%=@user.created_at.strftime(" %d of %B %Y")%></small>
      <hr>
    </div>
    <div class="list-group list-group-flush" id="myTabs" role="tablist">
      <%= link_to "#profile", :class => "list-group-item list-group-item-action active", :data => {:toggle => "tab"}, :role =>'tab', :aria => {:controls => "profile", :selected => "true"} do %>
        <i class="fas fa-user mr-3"></i> Profil
      <% end %>
      <%= link_to "#orders", :class => "list-group-item list-group-item-action", :data => {:toggle => "tab"}, :role =>'tab', :aria => {:controls => "profile", :selected => "false"} do %>
        <i class="fas fa-shopping-bag mr-3"></i> Commandes
      <% end %>
      <%= link_to wishlists_path, :class => "list-group-item has-badge list-group-item-action" do %>
        <i class="fas fa-heart mr-3"></i> Wishlist <span class="badge rounded badge-primary"><%= Wishlist.where(user_id:current_user.id).length %></span>
      <% end %>          
      <%= link_to destroy_user_session_path, :class => "list-group-item list-group-item-action text-danger", :data => {:toggle => "tab", :method => "delete"}, :role =>'tab', :aria => {:selected => "false"} do %>
        <i class="fas fa-sign-out-alt mr-3"></i> DÃ©connexion</a>
      <% end %> 
    </div>
  </div>
</div>