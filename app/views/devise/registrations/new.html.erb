    <div class="container my-3 my-sm-5">
       <div class="row justify-content-center" id="row-reset">
        <div class="col-sm-8 col-md-6 col-lg-5 col-xl-4">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-12 col-login">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div><%= render "devise/shared/error_messages", resource: resource %></div>
                    <div class="form-style-1">
                      <div class="form-group text-center mb-2 ">
                        <h2 class="bold mb-0">Sign Up</h2>
                      </div>
                       <div class="form-group input-icon">
                        <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: "form-control", placeholder: "Firstname"%>
                      </div>
                      <div class="form-group input-icon">
                        <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control", placeholder: "Lastname"%>
                      </div>
                      <div class="form-group input-icon">
                        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Username"%>
                      </div>
                      <div class="form-group input-icon">
                          <%= f.text_field :age, autocomplete: "age", class: "form-control", type: "number", placeholder: "Age"%>
                      </div>
                      <div class="form-group input-icon">
                        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email adress"%>
                      </div>
                      <div class="form-group input-icon">
                        <%= f.password_field :password, autocomplete: "password", class: "form-control", placeholder: "Password "%>
                         <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %>characters minimum)</em>
                        <% end %><br />
                      </div>
                      <div class="form-group input-icon">
                        <%= f.password_field :password_confirmation, autocomplete: "password", class: "form-control", placeholder: "Password Confirmation"%>
                      </div>
                      <div class="form-group input-icon">
                      <%= f.select(:gender, [ 'Male', 'Female' ], {}, { :class => 'form-control col-4' }) %>
                      </div>
                      <%= f.submit "SIGN UP", class: "btn btn-primary btn-block"%>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>