
    <!-- Main Content -->
<div class="container my-3">
  <div class="row">
    <div class="col-md-4 col-lg-3">
      <div class="card">
            <div class="card-body text-center">
              <img src="../img/user/user.svg" width="100" height="100" alt="User" class="rounded-circle mb-3">
              <h5 class="bold mb-0"><%= @user.firstname.capitalize %> <%= @user.lastname.upcase %></h5>
              <h6 class="bold mb-0">~ <%= @user.username.capitalize %> ~</h6></br>
              <small class="counter">Member since: <%=@user.created_at.strftime(" %d of %B %Y")%></small>
              <hr>
            </div>
            <div class="list-group list-group-flush">
              <a href="account-profile.html" class="list-group-item list-group-item-action active"><i class="fas fa-user mr-3"></i> Profile</a>
              <a href="account-orders.html" class="list-group-item list-group-item-action"><i class="fas fa-shopping-bag mr-3"></i> Orders</a>
              <a href="account-wishlist.html" class="list-group-item has-badge list-group-item-action"><i class="fas fa-heart mr-3"></i> Wishlist <span class="badge rounded badge-primary">2</span></a>
              <a href="account-address.html" class="list-group-item list-group-item-action"><i class="fas fa-map-signs mr-3"></i> Address</a>
              <a href="account-login.html" class="list-group-item list-group-item-action text-danger"><i class="fas fa-sign-out-alt mr-3"></i> Logout</a>
            </div>
      </div>
    </div>
    <div class="col mt-3 mt-md-0">
      <div class="card">
        <div class="card-body">
          <h1 style="text-align: center">My Profile</h1><hr>
          <h3>My Informations</h3><hr>
          <div class="form-style-1">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %> 
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-row">
              <div class="form-group col-sm-4">
                <label for="profileFirstName">First Name</label>
                  <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: "form-control" %>
              </div>
              <div class="form-group col-sm-4">
                <label for="profileLastName">Last Name</label>
                <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control" %>
              </div>
              <div class="form-group col-sm-4">
                <label for="profileAge">Age</label>
                <%= f.text_field :age, autofocus: true, autocomplete: "age", class: "form-control", type: "number" %>
              </div>
              <div class="form-group col-sm-6">
                <label for="profileUsername">Username</label>
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
              </div>
              <div class="form-group col-sm-6">
                <label for="profileEmail">Email address</label>
                <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          </div>
          </br><hr>
          <h3>My Password</h3><hr>
          <div class="form-style-1">
            <div class="form-row">
              <div class="form-group col-sm-6">
                <label for="profileEmail">New Password</label>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password"%>
                <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>
              <div class="form-group col-sm-6">
                <label for="profileEmail">Password Confirmation</label>
                <%= f.password_field :password_confirmation, autocomplete: "password", class: "form-control", placeholder: "Password Confirmation"%>
              </div>
          </div>
          </br><hr>
          <h3>Confirm My Changes</h3><hr>
          <div class="form-style-1">
            <div class="form-row">
              <div class="form-group col-sm-12">
              <label for="profileEmail">Enter your current password to confirm the changes</label>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current Password"%>
            </div></br>
            <div class="form-group col-sm-12">
                <%= f.submit "Update My Profile", class: "btn btn-primary col-sm-12" %>
            </div> 
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>





