<div class="container">

  <%= form_with(model: option, local: true) do |form| %>
    <% if option.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(option.errors.count, "error") %> a empeché cette option d'être sauvegardée:</h2>
      <ul>
        <% option.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <table class="table table-striped">
      <tbody>

        <tr>
          <th scope="row"><%= form.label :Nom %></th>
          <td class="d-flex justify-content-center"><%= form.text_field :name %></td>
        </tr>

      </tbody>
    </table>

    <div class="d-flex justify-content-center mb-3">
      <%= submit_tag("Créer/Mettre à jour une option", :class=>"btn btn-success") %>
    </div>

  <% end %>

</div>
