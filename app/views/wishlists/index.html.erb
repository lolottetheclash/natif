
    <!-- Main Content -->
    <div class="container my-3">
      <div class="row">
        <div class="col mt-3 mt-md-0">
          <div class="card">
            <div class="card-body">
              <h3>Ma Wishlist</h3><hr>
              <% @wishlists.each do |wishlist| %>
                <div class="card card-product card-product-list shadow-none border-bottom">
                  <a href="shop-single.html"> 
                    <%= image_tag @user.avatar, alt: Variant.find(wishlist.variant_id).title, :class => "card-img-top"%>
                  <div class="card-body d-flex flex-column justify-content-center">
                    <a href="shop-single.html" class="card-title"><%= Variant.find(wishlist.variant_id).title %></a>
                    <div class="attr">
                      <div class="price mr-3"><span class="h5">$<%= Variant.find(wishlist.variant_id).price %></span></div>
                      <% if wishlist.variant.stock == 0 %>
                        <div><span class="text-danger"><i class="fas fa-times-circle"></i></span> Indisponible</div> 
                      <% else %>
                        <div><span class="text-success"><i class="fas fa-check-circle"></i></span> Disponible </div>
                      <% end %>
                    </div>
                    <p class="d-flex justify-content-between align-items-center">

                    <a class="featured-product" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/wishlists/<%= wishlist.id %>"><span class="remove-item"><i class="fas fa-times"></i></span></a> 
                  
                      <% if wishlist.variant.stock != 0 %>
                          <div class="ml-3">
                            <%= form_for Cart.new do |f| %>
                              <%= f.hidden_field :variant_id, :value => wishlist.variant.id %>
                              <%= f.hidden_field :user_id, :value => current_user.id %>
                              <%= button_tag(class: "btn rounded-pill btn-outline-primary atc-demo") do %>
                                <i class="fas fa-cart-plus"></i>
                              <% end %>
                            <% end %>
                          </div>
                      <% end %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- /Main Content -->

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Variant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td><%= wishlist.user %></td>
        <td><%= wishlist.variant %></td>
        <td><%= link_to 'Show', wishlist %></td>
        <td><%= link_to 'Edit', edit_wishlist_path(wishlist) %></td>
        <td><%= link_to 'Destroy', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

