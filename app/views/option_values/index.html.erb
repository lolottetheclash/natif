        <td><%= link_to 'Edit', edit_option_value_path(optionvalue), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', optionvalue, method: :delete, data: { confirm: 'Etes vous sÃ»r ?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
