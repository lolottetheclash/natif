<!-- Main Content -->
<div class="container my-3">
  <div class="card">
    <div class="card-body">
      <div class="row d-flex justify-content-center">

        <!-- Contact Us Form -->
        <div class="col-md-6 mt-3 mt-md-0 mb-5">
          <h3 class="bold">Nous contacter</h3>
          <p>Vous pouvez nous envoyer un e-mail en cliquant sur ce bouton :</p>
          <div class="d-flex justify-content-center"><%= mail_to "contact@natif31.com" do %>
            <button type="button" class="btn btn-primary btn-lg">Nous envoyer un e-mail</button>
          </div><% end %>
          <form class="mt-3 form-style-1 collapse">
            <div class="form-row">
              <div class="form-group col-md-6">
                <div class="media">
                  <span><i class="fa fa-map-marker fa-fw text-info"></i></span>
                  <div class="media-body ml-1">
                    <div>1, Place du Capitole</div>
                    <div>31 100 Toulouse</div>
                    <div>France</div>
                  </div>
                </div>
              </div>
              <div class="form-group col-md-6">
                <div class="media mb-3 mb-md-0">
                  <span><i class="fa fa-phone fa-fw text-info"></i></span>
                  <div class="media-body ml-1">(+33) 212 123 456 789</div>
                </div>
                <div class="media">
                  <span><i class="fa fa-envelope fa-fw text-info"></i></span>
                  <div class="media-body ml-1">contact@natif31.com</div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <span class="input-icon">
                <i data-feather="user"></i>
                <input type="text" class="form-control" placeholder="Votre nom">
              </span>
            </div>
            <div class="form-group">
              <span class="input-icon">
                <i data-feather="mail"></i>
                <input type="email" class="form-control" placeholder="Votre e-mail">
              </span>
            </div>
            <div class="form-group">
              <span class="input-icon">
                <i data-feather="message-square"></i>
                <textarea class="form-control" rows="3" placeholder="Votre message"></textarea>
              </span>
            </div>
            <button type="button" class="btn btn-primary">Envoyer</button>
          </form>
        </div>
        <!-- /Contact Us Form -->

      </div>
    </div>
  </div>
</div>
<!-- /Main Content -->