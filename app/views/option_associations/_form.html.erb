<div class="container">

  <%= form_with(model: option_association, local: true) do |form| %>
    <% if option_association.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(option_association.errors.count, "error") %> A empeché cet option_association d'être sauvegardée:</h2>
      <ul>
        <% option_association.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <table class="table table-striped">
      <tbody>
      
        <tr>
          <th scope="row"><%= form.label :"Variante" %></th>
          <td class="d-flex justify-content-center"><%= form.collection_select(:variant_id, Variant.all, :id, :title) %></td>
        </tr>

        <tr>
          <th scope="row"><%= form.label :"Option" %></th>
          <td class="d-flex justify-content-center"><%= form.collection_select(:option_value_id, OptionValue.all, :id, :name) %></td>
        </tr>

      </tbody>
    </table>

    <div class="d-flex justify-content-center mb-3">
      <%= submit_tag("Créer/Mettre à jour une valeur d'option", :class=>"btn btn-success") %>
    </div>

  <% end %>

</div>
